#!/usr/bin/env ruby
# frozen_string_literal: true
#
# Manual testing script for client name search
# For automated tests, see spec/client_search_cli/client_search_spec.rb

require_relative "../lib/client_search_cli"

puts "Testing name search..."
api_client = ClientSearchCli::ApiClient.new
search_service = ClientSearchCli::ClientSearch.new(api_client)

["John", "Smith", "Jane"].each do |name|
  puts "\nSearching for clients with name containing '#{name}':"
  clients = search_service.search_by_name(name)
  
  if clients.empty?
    puts "No results found"
  else
    puts "Found #{clients.size} clients:"
    clients.each do |client|
      puts "- #{client.name} (ID: #{client.id})"
    end
  end
end 